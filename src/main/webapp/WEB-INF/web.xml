<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>dlei-4cats-dev-send</display-name>
	<welcome-file-list>

		<!--definido abaixo a página principal da nossa aplicação -->		
		<welcome-file>index.jsp</welcome-file>		
	</welcome-file-list>

	<!-- Permite config para o pool(uma quantidade de conexão) de conexão -->
	<!--recursos -->
	<resource-ref>
		<description>Pool de conexão JDBC</description>
		<res-ref-name>jdbc/postgresql</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>resources.message</param-value>
	</context-param>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
		<param-value>pt_BR</param-value>
	</context-param>
</web-app>